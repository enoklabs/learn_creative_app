<!DOCTYPE html>
<html>
<head>
  <title>Learn Creative</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

  <link rel="stylesheet" href="css/custom.css">
  <link href='http://fonts.googleapis.com/css?family=Lato:400,100,100italic,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>

</head>
<body>

<header>
  <div class="row">
    <div class="large-3 columns">
      <a href="<%= root_path %>">
        <h2 class="logo"><%= image_tag('logo.png') %></h2>
      </a>

    </div>
    <div class="large-9 columns">
      <ul class="right inline-list">

       <% if member_signed_in?  %>

        <li><a class="navLink" href="<%= '/videos/library' %>">Library</a></li>

        <li>
            <%= link_to 'Sign out', destroy_member_session_path, :method => :delete, :class => 'navLink' %>
        </li>

        <% else %>

        <li><a class="navLink" href="<%= '/members/sign_in' %>">Sign in</a></li>

        <li><a class="button buttonsignup success-dark radius" href="<%= '/members/sign_up' %>">Sign up</a></li>

        <% end %>


      </ul>
    </div><!-- navigation -->
  </div><!-- row -->
</header><!-- End Header and Nav -->



<%= yield %>


    <!-- Footer -->
<footer>
    <div class="row">


      <div class="large-3 columns">
        <a href="<%= root_path %>">
          <h2 class="logo"><%= image_tag('logo.png') %></h2>
        </a>
      </div>

      <div class="large-3">
        <br/>
      </div>

      <div class="large-4 columns copyright">
        <p class="right green">Copyright &copy; 2013 by Enok.Madrid &nbsp;&nbsp;&nbsp;&nbsp;</p>
      </div>


    </div><!-- row -->
</footer><!-- Footer -->

</body>
</html>
