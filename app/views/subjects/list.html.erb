<div class="row">

  <div class="large-12 columns">
    <h2 class="center">Subjects</h2>
    <br/>

    <table class="listing" summary="Subject List">

      <tr>
        <th>&nbsp;</th>
        <th>Subject</th>
        <th>Visible</th>
        <th>Actions</th>
      </tr>

      <% @subjects.each do |subject| %>

      <tr>
        <td><% subject.position %></td>
        <td><% subject.name %></td>
        <td><%= subject.visible ? 'Yes' : 'No' %></td>
        <td class="actions">
          <%= link_to('Show', {:action => 'list', :id => subject.id}, :class => 'action show')   %>

        </td>
      </tr>

      <% end %>

    </table>

  </div>

</div>