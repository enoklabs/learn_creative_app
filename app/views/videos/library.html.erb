<section class="create">
<div class="row">
  <div class="large-6 large-centered columns formpadding">

  <br/><br/><br/><br/><br/>
  <h4>Want to create a new video?</h4>
  <form method="post" action="/videos">

    <div class="row collapse">
        <div class="large-9 columns">
            <input type="text" name="title" placeholder="Title of New Video"/>
        </div>
        <div class="large-3 columns">
          <div id="customDropdown" class="small secondary radius">
            <select>
              <option>Art</option>
              <option>Graphics</option>
              <option>Web</option>
              <option>Development</option>
              <option>Business</option>
            </select>
          </div>
        </div>
    </div>

    <input class="button small success-dark radius" type="submit" value="Add Video"/>

  </form>


  </div>
</div>
</section>

