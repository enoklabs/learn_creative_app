<section class="library" xmlns="http://www.w3.org/1999/html">


<!-- ======== Art ======== -->
  <div class="row"><br/><br/>

    <div class="large-12 columns">
      <h2>Art Videos</h2>
    </div>

    <!-- displays all art videos -->
    <% @art_videos.each do |video| %>
    <div class="subject panel large-3 columns">
      <a class="text-center" href=<%= "/videos/#{video.id}" %>>
        <p>
          <%= image_tag( video.icon, :class => 'icons' ) %>
        </p>
